#:import Factory kivy.factory.Factory
#:set color_button (0.784, 0.443, 0.216, 1)  # brown
#:set color_button_pressed (0.659, 0.522, 0.431, 1)  # darker brown
#:set color_font (0.957, 0.890, 0.843, 1)  # off white

<MySpinnerOption@SpinnerOption>:
    color: color_font

<Spinner>:
    color: 0.1, 0.8, 0.6, 1
    size_hint: 0.3, 0.3
    size: (500, 50)
    pos_hint: {'center_x' : 0.5, 'center_y' : 0.5}

<MainLayout>:

    nS: nS
    nb: nb
    option_menu: option_menu
    input_menu: input_menu
    output: output

    GridLayout:
        cols: 2
        size: root.width, root.height

        Label:
            text: "Notation"

        GridLayout:
            rows: 1
            # Radio-Buttons for # / b
            CheckBox:
                id: nS
                active: True
                group: 'notation'
                on_active: root.change_val_with_notation()

            Label:
                text: '#'
                # on_press: nS.active = True

            CheckBox:
                id: nb
                group: 'notation'
                on_active: root.change_val_with_notation()

            Label:
                text: 'b'
                # on_press: nb.active = True

        Label:
            text: "Options"

        Spinner:
            id: option_menu
            text: "Select"
            values: root.options_spinner_vals
            background_color: color_button if self.state == 'normal' else color_button_pressed
            color: color_font
            option_cls: Factory.get("MySpinnerOption")
            # on_select: root.get_option_data()

        Label:
            text: "Input"
        # Enable Spinner / ListView (Multi-select) enable/disable based on Select Data
        Spinner:
            id: input_menu
            text: "Select"
            values: root.notes
            background_color: color_button if self.state == 'normal' else color_button_pressed
            color: color_font
            option_cls: Factory.get("MySpinnerOption")
            # mode: disabled

        Label:
            text: "Output"

        Button:
            id: output
            text: "Click Me"
            on_press: root.show_result()
            # mode: disabled
