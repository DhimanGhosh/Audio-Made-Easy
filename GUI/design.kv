<Spinner>:
    color: 0.1, 0.8, 0.6, 1
    size_hint: 0.3, 0.3
    size: (500, 50)
    pos_hint: {'center_x' : 0.5, 'center_y' : 0.5}

<MainLayout>:

    nS: nS
    nb: nb
    option_menu: option_menu
    input_menu: input_menu

    GridLayout:
        cols: 2
        size: root.width, root.height

        Label:
            text: "Notation"

        GridLayout:
            rows: 1
            # Radio-Buttons for # / b
            CheckBox:
                id: nS
                active: True
                group: 'notation'
                on_active: root.detect_notation()

            Label:
                text: '#'

            CheckBox:
                id: nb
                group: 'notation'
                on_active: root.detect_notation()

            Label:
                text: 'b'

        Label:
            text: "Options"

        Spinner:
            id: option_menu
            text: "Select"
            on_press: root.get_input_data()
            values: root.spinner_vals
            # on_select: root.get_input_data()

        Label:
            text: "Input"
        # Enable Spinner / ListView (Multi-select) enable/disable based on Select Data
        Spinner:
            id: input_menu
            text: "Select"
            values: root.notes
            # mode: disabled

        Label:
            text: "Output"

        TextInput:
            id: output
            multiline: False
            # mode: disabled
