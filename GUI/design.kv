<Spinner>:
    color: 0.1, 0.8, 0.6, 1
    size_hint: 0.3, 0.3
    size: 500, 50
    pos_hint: {'x' : 0.5, 'top' : 1}

<MainLayout>:

    option_menu: option_menu
    input_menu: input_menu

    GridLayout:
        cols: 2
        size: root.width, root.height

        Label:
            text: "Notation"

        GridLayout:
            rows: 1
            # Radio-Buttons for # / b
            CheckBox:
                active: True
                group: 'notation'
                id: nS

            Label:
                text: '#'

            CheckBox:
                group: 'notation'
                id: nb

            Label:
                text: 'b'

        Label:
            text: "Options"

        Spinner:
            id: option_menu
            text: "Select"
            values: root.spinner_vals

        Label:
            text: "Input"
        # Enable Spinner / ListView (Multi-select) enable/disable based on Select Data
        Spinner:
            id: input_menu
            text: "Select"
            values: root.notesS
            # mode: disabled

        Label:
            text: "Output"

        TextInput:
            multiline: False
            # mode: disabled
